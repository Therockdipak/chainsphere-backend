generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int    @id @default(autoincrement())
  firstName String
  lastName  String
  email     String @unique
  password  String
  country   String
  state     String
  city      String
  dob       String
  address   String
  zipCode   String
  ibiName   String
  ibiId     String
  isVerified Boolean @default(false)
  otp       String?
}
